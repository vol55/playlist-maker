<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SettingOptionWithIcon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/space_16dp</item>
        <item name="android:paddingVertical">@dimen/space_20dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">?attr/textPrimary</item>
        <item name="android:drawableTint">?attr/textPrimary</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">0dp</item>
        <item name="contentInsetStart">@dimen/space_16dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleMarginStart">0dp</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:textSize">@dimen/text_header_small</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="Header">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/textPrimary</item>
    </style>

    <style name="TextLarge">
        <item name="android:textSize">@dimen/text_header_small</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/textPrimary</item>
    </style>

    <style name="TextSmall">
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/textPrimary</item>
    </style>

    <style name="Label">
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/yandex_gray</item>
    </style>

    <style name="Info">
        <item name="android:textSize">@dimen/text_13sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/textPrimary</item>
    </style>

    <style name="TextAppearance.Design.Tab.Custom" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/retryButtonBackground</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="BottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">20dp</item>
        <item name="itemIconTint">@color/bottom_nav_colors</item>
        <item name="itemTextColor">@color/bottom_nav_colors</item>
        <item name="itemTextAppearanceActive">@style/BottomNavTextActive</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavTextInactive</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:background">?attr/backgroundPrimary</item>
    </style>

    <style name="BottomNavTextActive" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="BottomNavTextInactive" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="Widget.Playlist.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Playlist.Rounded8dp</item>
        <item name="boxBackgroundColor">?attr/backgroundPrimary</item>
        <item name="boxStrokeColor">@color/playlist_input_outline</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/yandex_gray</item>
        <item name="android:textColor">?attr/textPrimary</item>
        <item name="android:textCursorDrawable">@drawable/textedit_cursor</item>
    </style>

    <style name="ShapeAppearance.Playlist.Rounded8dp" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>
