<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LargeButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/space_16dp</item>
        <item name="android:layout_marginVertical">@dimen/space_8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/buttonPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/textPrimaryVariant</item>
        <item name="android:textSize">@dimen/text_header_small</item>
        <item name="cornerRadius">@dimen/border_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/space_8dp</item>
        <item name="iconTint">?attr/textPrimaryVariant</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingOptionWithIcon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/space_16dp</item>
        <item name="android:paddingVertical">@dimen/space_20dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">?attr/textPrimary</item>
        <item name="android:drawableTint">?attr/textPrimary</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">0dp</item>
        <item name="contentInsetStart">@dimen/space_16dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleMarginStart">0dp</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:textSize">@dimen/text_header_small</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="Header">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/textPrimary</item>
    </style>

    <style name="TextLarge">
        <item name="android:textSize">@dimen/text_header_small</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/textPrimary</item>
    </style>

    <style name="TextSmall">
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/textPrimary</item>
    </style>

    <style name="Label">
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/yandex_gray</item>
    </style>

    <style name="Info">
        <item name="android:textSize">@dimen/text_13sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/textPrimary</item>
    </style>

    <style name="TextAppearance.Design.Tab.Custom" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/retryButtonBackground</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

</resources>