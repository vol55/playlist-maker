<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center_horizontal"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/ys_display_medium"
        android:text=""
        android:textSize="14sp"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="@dimen/image_medium"
        android:layout_height="@dimen/image_medium"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/something_went_wrong"
        android:scaleType="centerCrop"
        android:src="?attr/noResultsImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/ys_display_regular"
        android:text="@string/favorites_empty"
        android:textAlignment="center"
        android:textColor="?attr/foreground"
        android:textSize="@dimen/text_size_large" />

</LinearLayout>